<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="data.mapper.ComreplyMapper">
	<select id="getTotalCount" resultType="int">
		select count(*) from comreply
	</select>
	
	<!-- idx max값이 null일 경우 0으로 나오게하기 -->
	<select id="getMaxIdx" resultType="int">
		select ifnull(max(idx),0) from comreply
	</select>
	
	<!-- 같은 group 중 step 보다 큰 데이터는 모두는 +1 -->
	<update id="updateRestep" parameterType="HashMap">
		update comreply set restep=restep+1 where regroup=#{regroup} and restep>#{restep}
	</update>
	
	<!-- insert : 원글, 새글 모두 해당 -->
	<insert id="insertReply" parameterType="redto">
		insert into comreply (num,id,content,writeday,regroup,restep,relevel) 
		values (#{num},#{id},#{content},now(),#{regroup},#{restep},#{relevel})
	</insert>
	
	<update id="updateReply" parameterType="redto">
		update comreply set content=#{content} where idx=#{idx}
	</update>
	
	<delete id="deleteReply" parameterType="int">
		delete from comreply where idx=#{idx}
	</delete>
	
	<select id="getReplyList" parameterType="int" resultType="redto">
		select * from comreply where num=#{num} order by idx asc
	</select>
	
	<select id="getReply" parameterType="int" resultType="redto">
		select * from comreply where idx=#{idx}
	</select>
</mapper>