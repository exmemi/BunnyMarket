<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="data.mapper.MainMapper">
	<insert id="NoticeInsert" parameterType="ndto">
		insert into notice (idx,title,content,read_count,write_day) values (
		#{idx},#{title},#{content},#{read_count},now())	
	</insert>
	<update id="NoticeUpdate">
			update notice set title=#{title},content=#{content} where idx=#{idx}
	</update>
	<delete id="NoticeDelete">
		delete from boardanswer where idx=#{idx}
	</delete>
</mapper>