<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="data.mapper.AdreplyMapper">
	<select id="getTotalCount" resultType="int">
		select count(*) from adreply
	</select>
	
	<!-- idx max값, null일 경우 0 -->
	<select id="getMaxIdx" resultType="int">
		select ifnull(max(idx),0) from adreply
	</select>
	
	<!-- 같은 group 중 step 보다 큰 데이터는 모두는 +1 -->
	<update id="updateRestep" parameterType="HashMap">
		update adreply set restep=restep+1 where regroup=#{regroup} and restep>#{restep}
	</update>
	
	<!-- insert : 원댓, 새댓 모두 해당 -->
	<insert id="insertReply" parameterType="ardto">
		insert into adreply (num,id,content,writeday,regroup,restep,relevel) 
		values (#{num},#{id},#{content},now(),#{regroup},#{restep},#{relevel})
	</insert>
	
	<select id="getReplyList" parameterType="int" resultType="ardto">
		select * from adreply where num=#{num} order by regroup, restep
	</select>
	
	<select id="getReply" parameterType="int" resultType="ardto">
		select * from adreply where idx=#{idx}
	</select>
	
	<update id="updateReply" parameterType="ardto">
		update adreply set content=#{content} where idx=#{idx}
	</update>
	
	<delete id="deleteReply" parameterType="int">
		delete from adreply where idx=#{idx}
	</delete>
</mapper>